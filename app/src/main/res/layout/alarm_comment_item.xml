<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/alarm2UserProfileImg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/squirrel" />


        <TextView
            android:id="@+id/alarm2UserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/alarm2UserProfileImg"
            android:text="uername"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/alarm2UserLevel"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/alarm2UserName"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/graduationhat" />

        <TextView
            android:id="@+id/alarm2Contents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/alarm2UserName"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/alarm2UserProfileImg"
            android:text="'제목(8글자)'에 코멘트를 남겼습니다."
            android:textSize="16sp" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>
